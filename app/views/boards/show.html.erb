<h1>
<%= @board.name %>
</h1>
<h2>Links</h2>
<% @board.links.each do |link|  %>
  <%= link.name %>
  <%= link.url %>
  <%= link.desc %>
<% end %>
<h2>Add a link</h2>
<%= form_for([@board, @board.links.build]) do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :url %><br>
    <%= f.text_field :url %>
  </p>
  <p>
    <%= f.label :desc %><br>
    <%= f.text_area :desc %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>


<%= link_to 'Home', boards_path %>